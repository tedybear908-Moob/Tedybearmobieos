<script type="text/javascript">
    // --- BAGIAN YANG BISA ANDA SESUAIKAN ---
    const nomorWhatsapp = "6281234567890"; // GANTI DENGAN NOMOR WA TUJUAN (Format: 62...)
    // ------------------------------------

    let namaPengguna = "";
    let kelasPengguna = "";
    let skorAkhir = 0; // Variabel untuk menyimpan skor akhir

    const tombolMulai = document.getElementById('mulai-button');
    const formPengguna = document.getElementById('data-pengguna');
    const containerPuzzle = document.getElementById('puzzle-container');

    tombolMulai.addEventListener('click', function() {
        const inputNama = document.getElementById('nama');
        const inputKelas = document.getElementById('kelas');

        if (inputNama.value.trim() === '' || inputKelas.value.trim() === '') {
            alert('Harap isi Nama dan Kelas terlebih dahulu!');
        } else {
            namaPengguna = inputNama.value.trim();
            kelasPengguna = inputKelas.value.trim();
            formPengguna.style.display = 'none';
            containerPuzzle.style.display = 'block';
            BeginCrossword();
        }
    });
    
    // Fungsi baru untuk menangani klik pada tombol "Periksa Jawaban"
    function handleCheckClick() {
        // Jalankan fungsi pengecekan asli dan simpan jumlah jawaban benar
        const jumlahBenar = window.CheckClick();
        
        // Jika puzzle selesai (CrosswordFinished menjadi true), hitung skor
        if (CrosswordFinished) {
            // Hitung skor (jumlah benar / total kata * 100)
            skorAkhir = Math.round((jumlahBenar / Words) * 100);

            const congratsBox = document.getElementById('congratulations');
            
            // Tampilkan skor di kotak selamat
            congratsBox.innerHTML = `<h3>Selamat!</h3><p>Anda telah berhasil menyelesaikan teka-teki silang ini.</p><p><b>Skor Anda: ${skorAkhir}</b></p>`;
            
            // Cek apakah tombol sudah ada agar tidak duplikat
            if (!document.getElementById('kirim-wa-button')) {
                const tombolKirim = document.createElement('button');
                tombolKirim.id = 'kirim-wa-button';
                tombolKirim.className = 'custom-button';
                tombolKirim.textContent = 'Kirim Hasil via WhatsApp';
                tombolKirim.onclick = kirimJawaban;
                
                congratsBox.appendChild(tombolKirim);
            }
        }
    }

    function kirimJawaban() {
        const pesanWa = `Halo, saya sudah selesai mengerjakan Teka-Teki Silang PPKn.\n\nNama: *${namaPengguna}*\nKelas: *${kelasPengguna}*\nNilai: *${skorAkhir}*\n\nTerima kasih.`;
        
        // Encode pesan untuk URL
        const encodedPesan = encodeURIComponent(pesanWa);
        
        // Buat URL WhatsApp
        const urlWa = `https://wa.me/${nomorWhatsapp}?text=${encodedPesan}`;
        
        // Buka di tab baru
        window.open(urlWa, '_blank');
    }
</script>


